# Application
NODE_ENV=development
PORT=3000

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/eman-portfolio?retryWrites=true&w=majority

# JWT
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-this-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=7d

# Cloudflare R2 (S3-compatible)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_R2_ACCESS_KEY=your-r2-access-key
CLOUDFLARE_R2_SECRET_KEY=your-r2-secret-key
CLOUDFLARE_R2_BUCKET=eman-portfolio-files
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Cloudflare Images
CLOUDFLARE_IMAGES_TOKEN=your-cloudflare-images-token
CLOUDFLARE_IMAGES_ACCOUNT_HASH=your-account-hash

# CORS
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5173

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10
